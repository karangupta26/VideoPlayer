<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.media.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="350.0" prefWidth="800.0" stylesheets="@styleSheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="videoplayer.FXMLDocumentController">
    <bottom>
    <VBox fx:id="vbox" alignment="CENTER" prefHeight="35.0" prefWidth="572.0">
      <children>
        <HBox alignment="CENTER" minHeight="26.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="35.0" prefWidth="800.0">
          <children>
            <Button fx:id="openfile" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="20.0" prefWidth="20.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
            <Button fx:id="play" mnemonicParsing="false" onAction="#playVideo" prefHeight="20.0" prefWidth="20.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
            <Button fx:id="pause" mnemonicParsing="false" onAction="#pauseVideo" prefHeight="20.0" prefWidth="20.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
            <Button fx:id="stop" ellipsisString="" mnemonicParsing="false" onAction="#stopVideo" prefHeight="20.0" prefWidth="20.0">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#slowerVideo" text="&lt;&lt;&lt;" />
            <Button mnemonicParsing="false" onAction="#slowVideo" text="&lt;&lt;" />
            <Button mnemonicParsing="false" onAction="#fastVideo" text="&gt;&gt;" />
            <Button mnemonicParsing="false" onAction="#fasterVideo" prefHeight="20.0" text="&gt;&gt;&gt;">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
            <Button fx:id="exit" ellipsisString="" mnemonicParsing="false" onAction="#exitVideo" text="Exit" />
                  <Slider fx:id="vSlider">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Slider>
          </children>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
        </HBox>
      </children>
    </VBox>
  </bottom>
  <center>
    <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Slider fx:id="seekSlider" StackPane.alignment="BOTTOM_CENTER" />
            <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" />
         </children></StackPane>
  </center>
</BorderPane>
